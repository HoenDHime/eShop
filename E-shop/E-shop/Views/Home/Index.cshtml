@model IEnumerable<E_shop.Models.Product>
@using MvcContrib.UI.Grid;
@using MvcContrib.Pagination;
@using MvcContrib.UI.Pager;

@{
    ViewBag.Title = string.Format("Домашняя страница | {0}", Resources.GlobalString.Title);
}

<table>
    <tr align="center" valign="top">
        <td style="color: #fff; " >
            @{Html.RenderAction("Tree");}
        </td>
        <td style="color: #fff; ">
            @{Html.RenderAction("ProductAvailableDiscount");}
        </td>
        <td style="color: #fff;">
            @{Html.RenderAction("ProductOrderByDate");}
        </td>
        <td style="color: #fff;">
            @{Html.RenderAction("ProductOrderByBestSelling");}
        </td>
    </tr>
</table>